    "        m5 = Matrix([[2, 1], [-1, 3]],",
    "        ).set_row_colors(RED, GREEN)",
    "        g = Group(",
    "            m0,m1,m2,m3,m4,m5",
    "        ).arrange_in_grid(buff=2)",
