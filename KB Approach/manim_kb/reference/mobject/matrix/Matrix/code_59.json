    "from manim import *",
    "",
    "class MatrixExamples(Scene):",
    "    def construct(self):",
    "        m0 = Matrix([[2, r\"\\pi\"], [-1, 1]])",
    "        m1 = Matrix([[2, 0, 4], [-1, 1, 5]],",
