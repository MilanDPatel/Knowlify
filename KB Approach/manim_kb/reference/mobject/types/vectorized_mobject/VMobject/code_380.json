{
  "code": [
    "from manim import *",
    "",
    "class MobjectScaleExample(Scene):",
    "    def construct(self):",
    "        c1 = Circle(1, RED).set_x(-1)",
    "        c2 = Circle(1, GREEN).set_x(1)",
    "",
    "        vg = VGroup(c1, c2)",
    "        vg.set_stroke(width=50)",
    "        self.add(vg)",
    "",
    "        self.play(",
    "            c1.animate.scale(.25),",
    "            c2.animate.scale(.25,",
    "                scale_stroke=True)",
    "        )"
  ],
