    "from manim import *",
    "",
    "class GetSecantSlopeGroupExample(Scene):",
    "    def construct(self):",
    "        ax = Axes(y_range=[-1, 7])",
    "        graph = ax.plot(lambda x: 1 / 4 * x ** 2, color=BLUE)",
    "        slopes = ax.get_secant_slope_group(",
    "            x=2.0,",
    "            graph=graph,",
    "            dx=1.0,",
    "            dx_label=Tex(\"dx = 1.0\"),",
    "            dy_label=\"dy\",",
    "            dx_line_color=GREEN_B,",
    "            secant_line_length=4,",
    "            secant_line_color=RED_D,",
    "        )",
    "",
    "        self.add(ax, graph, slopes)"
  ],
