{
  "code": [
    "from manim import *",
    "",
    "class ParametricCurveExample(Scene):",
    "    def construct(self):",
    "        ax = Axes()",
    "        cardioid = ax.plot_parametric_curve(",
    "            lambda t: np.array(",
    "                [",
    "                    np.exp(1) * np.cos(t) * (1 - np.cos(t)),",
    "                    np.exp(1) * np.sin(t) * (1 - np.cos(t)),",
    "                    0,",
    "                ]",
    "            ),",
    "            t_range=[0, 2 * PI],",
    "            color=\"#0FF1CE\",",
    "        )",
    "        self.add(ax, cardioid)"
  ],
  "source_url": "https://docs.manim.community/en/stable/reference/manim.mobject.graphing.coordinate_systems.CoordinateSystem.html"
}