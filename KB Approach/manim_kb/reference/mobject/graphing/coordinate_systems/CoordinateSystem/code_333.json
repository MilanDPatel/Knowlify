    "class GetHorizontalLineExample(Scene):",
    "    def construct(self):",
    "        ax = Axes().add_coordinates()",
    "        point = ax @ (-4, 1.5)",
    "",
    "        dot = Dot(point)",
    "        line = ax.get_horizontal_line(point, line_func=Line)",
    "",
    "        self.add(ax, line, dot)"
